@code {
    private MudForm? _form;
    private MudDatePicker? _datePickerRef;
    private bool _isValid = false;
    private bool _loading = true;
    private bool _loadingList = false;
    private bool _loadingNetIncome = false;
    private bool _processing = false;
    private bool _isEditMode = false;
    private string _userId = "";
    private string _quarryId = "";
    private DateTime? _selectedDate = DateTime.Today;

    // Financial summary fields
    private double _netIncome = 0;
    private double _totalBanked = 0;
    private double _availableToBank = 0;

    private Domain.Entities.Banking _banking = new()
    {
        BankingDate = DateTime.Today, // Will be updated to selected date in ResetForm
        AmountBanked = 0,
        BalanceBF = 0
    };

    private List<Domain.Entities.Banking> _bankings = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Get user info from auth state
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                _userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "";

                // Get user's quarry context from database
                var userContext = await UserService.GetUserQuarryContextAsync(_userId);

                if (userContext != null)
                {
                    _quarryId = userContext.QuarryId;

                    // Load existing banking records
                    await RefreshBankingList();

                    // Load net income for selected date
                    await LoadNetIncome();

                    // Initialize form with selected date
                    ResetForm();
                }
                else
                {
                    Snackbar.Add("No quarry assigned to your account. Please contact your manager.", Severity.Warning);
                }
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading banking records: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task RefreshBankingList()
    {
        _loadingList = true;
        try
        {
            _bankings = await BankingService.GetBankingForClerkAsync(_userId);

            // Calculate total banked for selected date
            var selectedDay = _selectedDate ?? DateTime.Today;
            var dateStamp = selectedDay.ToString("yyyyMMdd");
            _totalBanked = _bankings
                .Where(b => b.DateStamp == dateStamp)
                .Sum(b => b.AmountBanked);

            // Recalculate available amount
            _availableToBank = _netIncome - _totalBanked;
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading banking list: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loadingList = false;
        }
    }

    private async Task LoadNetIncome()
    {
        _loadingNetIncome = true;
        try
        {
            // Generate report for selected date to get net income
            var selectedDay = _selectedDate ?? DateTime.Today;
            var report = await ReportService.GenerateClerkReportAsync(selectedDay, selectedDay, _quarryId, _userId);

            _netIncome = report.NetEarnings;

            // Calculate total banked for selected date
            var dateStamp = selectedDay.ToString("yyyyMMdd");
            _totalBanked = _bankings
                .Where(b => b.DateStamp == dateStamp)
                .Sum(b => b.AmountBanked);

            // Calculate available to bank
            _availableToBank = _netIncome - _totalBanked;
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading net income: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loadingNetIncome = false;
        }
    }

    private async Task OnDateChanged(DateTime? newDate)
    {
        _selectedDate = newDate;
        await LoadNetIncome();
    }

    private async Task OpenDatePicker()
    {
        if (_datePickerRef != null)
        {
            await _datePickerRef.OpenAsync();
        }
    }

    private string ValidateBankingAmount(double amount)
    {
        if (amount <= 0)
            return "Amount must be greater than 0";

        // Skip validation if in edit mode (editing existing banking)
        if (_isEditMode)
            return string.Empty;

        // Check if amount exceeds available
        if (amount > _availableToBank)
        {
            return $"Amount exceeds available balance (KES {_availableToBank:N0})";
        }

        return string.Empty; // Valid
    }

    private string GetBankingHelperText()
    {
        if (_isEditMode)
            return "Editing existing banking record";

        if (_availableToBank < 0)
            return $"Over-banked by KES {Math.Abs(_availableToBank):N0} - cannot add more banking";

        if (_availableToBank == 0)
            return "Fully banked - no funds available";

        return $"Maximum available: KES {_availableToBank:N0}";
    }

    private async Task SaveBanking()
    {
        // RefCode truncation logic (max 10 chars)
        if (!string.IsNullOrWhiteSpace(_banking.TxnReference) && _banking.TxnReference.Length > 10)
        {
            _banking.RefCode = _banking.TxnReference.Substring(0, 10);
        }
        else
        {
            _banking.RefCode = _banking.TxnReference;
        }

        _processing = true;
        try
        {
            bool success;
            string message;

            if (_isEditMode)
            {
                (success, message) = await BankingService.UpdateBankingAsync(_banking, _userId);
            }
            else
            {
                (success, message, _) = await BankingService.CreateBankingAsync(_banking, _userId, _quarryId);
            }

            if (success)
            {
                Snackbar.Add(message, Severity.Success);
                await RefreshBankingList();
                await LoadNetIncome(); // Refresh net income and available balance
                ResetForm();
            }
            else
            {
                Snackbar.Add(message, Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error saving banking record: {ex.Message}", Severity.Error);
        }
        finally
        {
            _processing = false;
        }
    }

    private async Task DeleteBanking()
    {
        var result = await DialogService.ShowMessageBox(
            "Delete Banking Record",
            "Are you sure you want to delete this banking record?",
            yesText: "Delete", cancelText: "Cancel");

        if (result != true)
            return;

        _processing = true;
        try
        {
            var (success, message) = await BankingService.DeleteBankingAsync(_banking.Id, _userId);

            if (success)
            {
                Snackbar.Add(message, Severity.Success);
                await RefreshBankingList();
                await LoadNetIncome(); // Refresh net income and available balance
                ResetForm();
            }
            else
            {
                Snackbar.Add(message, Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error deleting banking record: {ex.Message}", Severity.Error);
        }
        finally
        {
            _processing = false;
        }
    }

    private void SelectBankingForEdit(Domain.Entities.Banking banking)
    {
        _banking = new Domain.Entities.Banking
        {
            Id = banking.Id,
            BankingDate = banking.BankingDate,
            Item = banking.Item,
            AmountBanked = banking.AmountBanked,
            BalanceBF = banking.BalanceBF,
            TxnReference = banking.TxnReference,
            RefCode = banking.RefCode
        };
        _isEditMode = true;
    }

    private void CancelEdit()
    {
        ResetForm();
    }

    private void ResetForm()
    {
        _banking = new Domain.Entities.Banking
        {
            BankingDate = _selectedDate ?? DateTime.Today,
            AmountBanked = 0,
            BalanceBF = 0
        };
        _isEditMode = false;
        _form?.ResetAsync();
    }
