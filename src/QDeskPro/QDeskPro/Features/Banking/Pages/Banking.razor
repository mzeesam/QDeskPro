@page "/clerk/banking"
@using Microsoft.AspNetCore.Authorization
@using QDeskPro.Features.Banking.Services
@using QDeskPro.Features.Admin.Services
@using QDeskPro.Features.Reports.Services
@using QDeskPro.Domain.Entities
@attribute [Authorize(Roles = "Clerk")]
@rendermode InteractiveServer
@inject BankingService BankingService
@inject UserService UserService
@inject ReportService ReportService
@inject AuthenticationStateProvider AuthStateProvider
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<PageTitle>Banking - QDeskPro</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="py-4">
    <MudText Typo="Typo.h4" Class="font-weight-bold mb-4">
        <MudIcon Icon="@Icons.Material.Rounded.AccountBalance" Class="mr-2" />
        Banking Records
    </MudText>

    @if (_loading)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    }
    else
    {
        @* Net Income Summary Card *@
        <MudPaper Class="pa-4 mb-4" Elevation="0" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <MudGrid>
                <MudItem xs="12">
                    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-2">
                        <MudText Typo="Typo.h6" Class="font-weight-bold">
                            <MudIcon Icon="@Icons.Material.Rounded.AccountBalanceWallet" Class="mr-2" />
                            Financial Summary
                        </MudText>
                        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                            <MudPaper Class="px-3 py-1" Elevation="0" Style="background: rgba(255, 255, 255, 0.2); border-radius: 20px;">
                                <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                                    <MudIconButton Icon="@Icons.Material.Rounded.CalendarToday"
                                                   Color="Color.Inherit"
                                                   Size="Size.Small"
                                                   OnClick="OpenDatePicker"
                                                   Style="color: white;" />
                                    <MudText Typo="Typo.body2" Class="font-weight-medium" Style="color: white;">
                                        @(_selectedDate?.ToString("dd/MM/yyyy") ?? DateTime.Today.ToString("dd/MM/yyyy"))
                                    </MudText>
                                </MudStack>
                            </MudPaper>
                            @if (_loadingNetIncome)
                            {
                                <MudProgressCircular Size="Size.Small" Indeterminate="true" Style="color: white;" />
                            }
                            else
                            {
                                <MudIconButton Icon="@Icons.Material.Rounded.Refresh"
                                               Color="Color.Inherit"
                                               Size="Size.Small"
                                               OnClick="LoadNetIncome"
                                               Style="color: white;" />
                            }
                        </MudStack>
                    </MudStack>
                </MudItem>

                <MudItem xs="12" sm="4">
                    <MudPaper Class="pa-3" Style="background: rgba(255, 255, 255, 0.15); backdrop-filter: blur(10px);">
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.caption" Style="opacity: 0.9;">Net Income</MudText>
                            <MudText Typo="Typo.h5" Class="font-weight-bold">KES @_netIncome.ToString("N0")</MudText>
                            <MudText Typo="Typo.caption" Style="opacity: 0.8; font-size: 0.7rem;">
                                Total earnings for selected date
                            </MudText>
                        </MudStack>
                    </MudPaper>
                </MudItem>

                <MudItem xs="12" sm="4">
                    <MudPaper Class="pa-3" Style="background: rgba(255, 255, 255, 0.15); backdrop-filter: blur(10px);">
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.caption" Style="opacity: 0.9;">Already Banked</MudText>
                            <MudText Typo="Typo.h5" Class="font-weight-bold">KES @_totalBanked.ToString("N0")</MudText>
                            <MudText Typo="Typo.caption" Style="opacity: 0.8; font-size: 0.7rem;">
                                Sum for selected date
                            </MudText>
                        </MudStack>
                    </MudPaper>
                </MudItem>

                <MudItem xs="12" sm="4">
                    <MudPaper Class="pa-3" Style="background: rgba(255, 255, 255, 0.2); backdrop-filter: blur(10px); border: 2px solid rgba(255, 255, 255, 0.3);">
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.caption" Style="opacity: 0.9;">Available to Bank</MudText>
                            <MudText Typo="Typo.h5" Class="font-weight-bold">KES @_availableToBank.ToString("N0")</MudText>
                            <MudText Typo="Typo.caption" Style="opacity: 0.8; font-size: 0.7rem;">
                                @if (_availableToBank < 0)
                                {
                                    <span style="color: #ffeb3b;">⚠️ Over-banked by KES @(Math.Abs(_availableToBank).ToString("N0"))</span>
                                }
                                else if (_availableToBank == 0)
                                {
                                    <span>✓ Fully banked</span>
                                }
                                else
                                {
                                    <span>Remaining to bank</span>
                                }
                            </MudText>
                        </MudStack>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudPaper>

        @* Hidden Date Picker for Financial Summary *@
        <MudDatePicker @ref="_datePickerRef"
                       Date="_selectedDate"
                       DateChanged="OnDateChanged"
                       DateFormat="dd/MM/yyyy"
                       MaxDate="@DateTime.Today"
                       MinDate="@DateTime.Today.AddDays(-5)"
                       PickerVariant="PickerVariant.Dialog"
                       Style="display: none;" />

        @* Banking Entry Form *@
        <MudPaper Class="pa-4 mb-4" Elevation="0">
            <MudText Typo="Typo.h6" Class="font-weight-bold mb-3">
                @(_isEditMode ? "Update Banking Record" : "Add Banking Record")
            </MudText>

            <MudForm @ref="_form" @bind-IsValid="_isValid">
                <MudGrid>
                    <MudItem xs="12" sm="6">
                        <MudDatePicker @bind-Date="_banking.BankingDate"
                                       Label="Banking Date"
                                       Variant="Variant.Outlined"
                                       Required="true"
                                       RequiredError="Please select a date"
                                       MaxDate="@DateTime.Today"
                                       MinDate="@DateTime.Today.AddDays(-5)"
                                       DateFormat="dd/MM/yyyy" />
                    </MudItem>

                    <MudItem xs="12" sm="6">
                        <MudNumericField @bind-Value="_banking.AmountBanked"
                                         Label="Amount Banked"
                                         Variant="Variant.Outlined"
                                         Min="0"
                                         Required="true"
                                         RequiredError="Please provide the amount details"
                                         Validation="@(new Func<double, string>(ValidateBankingAmount))"
                                         Adornment="Adornment.Start"
                                         AdornmentText="KES"
                                         HelperText="@GetBankingHelperText()" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField @bind-Value="_banking.Item"
                                      Label="Description"
                                      Variant="Variant.Outlined"
                                      Required="true"
                                      Placeholder="e.g., Daily deposit" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField @bind-Value="_banking.TxnReference"
                                      Label="Transaction Reference"
                                      Variant="Variant.Outlined"
                                      Lines="2"
                                      Required="true"
                                      RequiredError="Please provide the reference details" />
                    </MudItem>
                </MudGrid>

                @* Action Buttons *@
                <MudStack Row="true" Justify="Justify.FlexEnd" Spacing="2" Class="mt-4">
                    @if (_isEditMode)
                    {
                        <MudButton Variant="Variant.Text"
                                   Color="Color.Error"
                                   OnClick="DeleteBanking"
                                   Disabled="_processing">
                            Delete
                        </MudButton>
                        <MudButton Variant="Variant.Text"
                                   OnClick="CancelEdit"
                                   Disabled="_processing">
                            Cancel
                        </MudButton>
                    }
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Disabled="@(!_isValid || _processing || (!_isEditMode && _availableToBank < 0))"
                               OnClick="SaveBanking"
                               StartIcon="@Icons.Material.Rounded.Save">
                        @if (_processing)
                        {
                            <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                        }
                        @(_isEditMode ? "Update" : "Save")
                    </MudButton>
                </MudStack>
            </MudForm>
        </MudPaper>

        @* Banking List *@
        <MudPaper Class="pa-4" Elevation="0">
            <MudText Typo="Typo.h6" Class="font-weight-bold mb-3">Recent Banking (Last 14 Days)</MudText>

            @if (!_bankings.Any())
            {
                <MudAlert Severity="Severity.Info" Icon="@Icons.Material.Rounded.Info">
                    No banking records yet
                </MudAlert>
            }
            else
            {
                <MudTable Items="@_bankings"
                          T="QDeskPro.Domain.Entities.Banking"
                          Hover="true"
                          Breakpoint="Breakpoint.Sm"
                          Dense="true"
                          Loading="@_loadingList"
                          RowClass="cursor-pointer"
                          OnRowClick="@(args => SelectBankingForEdit(args.Item))">
                    <HeaderContent>
                        <MudTh>Date</MudTh>
                        <MudTh>Description</MudTh>
                        <MudTh>Reference</MudTh>
                        <MudTh Style="text-align: right">Amount</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Date">
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.body2">@context.BankingDate?.ToString("dd/MM/yy")</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">@context.BankingDate?.ToString("hh:mm tt")</MudText>
                            </MudStack>
                        </MudTd>
                        <MudTd DataLabel="Description">
                            <MudText Typo="Typo.body2">@context.Item</MudText>
                        </MudTd>
                        <MudTd DataLabel="Reference">
                            <MudText Typo="Typo.caption" Color="Color.Secondary">
                                @(string.IsNullOrWhiteSpace(context.RefCode) ? "-" : context.RefCode)
                            </MudText>
                        </MudTd>
                        <MudTd DataLabel="Amount" Style="text-align: right">
                            <MudText Typo="Typo.body1" Color="Color.Primary" Class="font-weight-bold">
                                KES @context.AmountBanked.ToString("N1")
                            </MudText>
                        </MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager PageSizeOptions="new int[] { 12, 25, 50 }" />
                    </PagerContent>
                </MudTable>
            }
        </MudPaper>
    }
</MudContainer>

<style>
    .cursor-pointer {
        cursor: pointer;
    }

    .cursor-pointer:hover {
        background-color: rgba(0, 0, 0, 0.04);
    }
</style>

@code {
    private MudForm? _form;
    private MudDatePicker? _datePickerRef;
    private bool _isValid = false;
    private bool _loading = true;
    private bool _loadingList = false;
    private bool _loadingNetIncome = false;
    private bool _processing = false;
    private bool _isEditMode = false;
    private string _userId = "";
    private string _quarryId = "";
    private DateTime? _selectedDate = DateTime.Today;

    // Financial summary fields
    private double _netIncome = 0;
    private double _totalBanked = 0;
    private double _availableToBank = 0;

    private Domain.Entities.Banking _banking = new()
    {
        BankingDate = DateTime.Today, // Will be updated to selected date in ResetForm
        AmountBanked = 0,
        BalanceBF = 0
    };

    private List<Domain.Entities.Banking> _bankings = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Get user info from auth state
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                _userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "";

                // Get user's quarry context from database
                var userContext = await UserService.GetUserQuarryContextAsync(_userId);

                if (userContext != null)
                {
                    _quarryId = userContext.QuarryId;

                    // Load existing banking records
                    await RefreshBankingList();

                    // Load net income for selected date
                    await LoadNetIncome();

                    // Initialize form with selected date
                    ResetForm();
                }
                else
                {
                    Snackbar.Add("No quarry assigned to your account. Please contact your manager.", Severity.Warning);
                }
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading banking records: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task RefreshBankingList()
    {
        _loadingList = true;
        try
        {
            _bankings = await BankingService.GetBankingForClerkAsync(_userId);

            // Calculate total banked for selected date
            var selectedDay = _selectedDate ?? DateTime.Today;
            var dateStamp = selectedDay.ToString("yyyyMMdd");
            _totalBanked = _bankings
                .Where(b => b.DateStamp == dateStamp)
                .Sum(b => b.AmountBanked);

            // Recalculate available amount
            _availableToBank = _netIncome - _totalBanked;
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading banking list: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loadingList = false;
        }
    }

    private async Task LoadNetIncome()
    {
        _loadingNetIncome = true;
        try
        {
            // Generate report for selected date to get net income
            var selectedDay = _selectedDate ?? DateTime.Today;
            var report = await ReportService.GenerateClerkReportAsync(selectedDay, selectedDay, _quarryId, _userId);

            _netIncome = report.NetEarnings;

            // Calculate total banked for selected date
            var dateStamp = selectedDay.ToString("yyyyMMdd");
            _totalBanked = _bankings
                .Where(b => b.DateStamp == dateStamp)
                .Sum(b => b.AmountBanked);

            // Calculate available to bank
            _availableToBank = _netIncome - _totalBanked;
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading net income: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loadingNetIncome = false;
        }
    }

    private async Task OnDateChanged(DateTime? newDate)
    {
        _selectedDate = newDate;
        await LoadNetIncome();
    }

    private async Task OpenDatePicker()
    {
        if (_datePickerRef != null)
        {
            await _datePickerRef.OpenAsync();
        }
    }

    private string ValidateBankingAmount(double amount)
    {
        if (amount <= 0)
            return "Amount must be greater than 0";

        // Skip validation if in edit mode (editing existing banking)
        if (_isEditMode)
            return string.Empty;

        // Check if amount exceeds available
        if (amount > _availableToBank)
        {
            return $"Amount exceeds available balance (KES {_availableToBank:N0})";
        }

        return string.Empty; // Valid
    }

    private string GetBankingHelperText()
    {
        if (_isEditMode)
            return "Editing existing banking record";

        if (_availableToBank < 0)
            return $"Over-banked by KES {Math.Abs(_availableToBank):N0} - cannot add more banking";

        if (_availableToBank == 0)
            return "Fully banked - no funds available";

        return $"Maximum available: KES {_availableToBank:N0}";
    }

    private async Task SaveBanking()
    {
        // RefCode truncation logic (max 10 chars)
        if (!string.IsNullOrWhiteSpace(_banking.TxnReference) && _banking.TxnReference.Length > 10)
        {
            _banking.RefCode = _banking.TxnReference.Substring(0, 10);
        }
        else
        {
            _banking.RefCode = _banking.TxnReference;
        }

        _processing = true;
        try
        {
            bool success;
            string message;

            if (_isEditMode)
            {
                (success, message) = await BankingService.UpdateBankingAsync(_banking, _userId);
            }
            else
            {
                (success, message, _) = await BankingService.CreateBankingAsync(_banking, _userId, _quarryId);
            }

            if (success)
            {
                Snackbar.Add(message, Severity.Success);
                await RefreshBankingList();
                await LoadNetIncome(); // Refresh net income and available balance
                ResetForm();
            }
            else
            {
                Snackbar.Add(message, Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error saving banking record: {ex.Message}", Severity.Error);
        }
        finally
        {
            _processing = false;
        }
    }

    private async Task DeleteBanking()
    {
        var result = await DialogService.ShowMessageBox(
            "Delete Banking Record",
            "Are you sure you want to delete this banking record?",
            yesText: "Delete", cancelText: "Cancel");

        if (result != true)
            return;

        _processing = true;
        try
        {
            var (success, message) = await BankingService.DeleteBankingAsync(_banking.Id, _userId);

            if (success)
            {
                Snackbar.Add(message, Severity.Success);
                await RefreshBankingList();
                await LoadNetIncome(); // Refresh net income and available balance
                ResetForm();
            }
            else
            {
                Snackbar.Add(message, Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error deleting banking record: {ex.Message}", Severity.Error);
        }
        finally
        {
            _processing = false;
        }
    }

    private void SelectBankingForEdit(Domain.Entities.Banking banking)
    {
        _banking = new Domain.Entities.Banking
        {
            Id = banking.Id,
            BankingDate = banking.BankingDate,
            Item = banking.Item,
            AmountBanked = banking.AmountBanked,
            BalanceBF = banking.BalanceBF,
            TxnReference = banking.TxnReference,
            RefCode = banking.RefCode
        };
        _isEditMode = true;
    }

    private void CancelEdit()
    {
        ResetForm();
    }

    private void ResetForm()
    {
        _banking = new Domain.Entities.Banking
        {
            BankingDate = _selectedDate ?? DateTime.Today,
            AmountBanked = 0,
            BalanceBF = 0
        };
        _isEditMode = false;
        _form?.ResetAsync();
    }
}
