    }

    /* Mobile Responsiveness */
    @@media (max-width: 600px) {
        .expenses-header {
            flex-direction: column;
            text-align: center;
            gap: 16px;
            padding: 20px;
        }

        .header-content {
            flex-direction: column;
        }

        .header-icon-wrapper {
