        }

        .empty-icon {
            width: 64px;
            height: 64px;
        }
    }
</style>

@code {
    private MudForm? _form;
    private bool _isValid = false;
    private bool _loading = true;
    private bool _loadingList = false;
    private bool _processing = false;
    private bool _isEditMode = false;
    private string _userId = "";
    private string _quarryId = "";

    private Expense _expense = new()
    {
        ExpenseDate = DateTime.Today,
        Amount = 0,
        Category = "Miscellaneous"
    };

    private List<Expense> _expenses = new();

    // Expense Categories (Fixed List from implementation_plan.md)
    private static readonly string[] ExpenseCategories = new[]
    {
        "Fuel",
        "Transportation Hire",
        "Maintenance and Repairs",
        "Commission",
        "Administrative",
        "Marketing",
        "Wages",
        "Loaders Fees",
        "Consumables and Utilities",
        "Bank Charges",
        "Cess and Road Fees",
        "Miscellaneous"
    };

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Get user info from auth state
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                _userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "";

                // Get user's quarry context from database
                var userContext = await UserService.GetUserQuarryContextAsync(_userId);

                if (userContext != null)
                {
                    _quarryId = userContext.QuarryId;

                    // Load existing expenses
                    await RefreshExpenseList();
                }
                else
                {
                    Snackbar.Add("No quarry assigned to your account. Please contact your manager.", Severity.Warning);
                }
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading expenses: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task RefreshExpenseList()
    {
        _loadingList = true;
        try
        {
            _expenses = await ExpenseService.GetExpensesForClerkAsync(_userId);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading expense list: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loadingList = false;
        }
    }

    private async Task SaveExpense()
    {
        _processing = true;
        try
        {
            bool success;
            string message;

            if (_isEditMode)
            {
                (success, message) = await ExpenseService.UpdateExpenseAsync(_expense, _userId);
            }
            else
            {
                (success, message, _) = await ExpenseService.CreateExpenseAsync(_expense, _userId, _quarryId);
            }

            if (success)
            {
                Snackbar.Add(message, Severity.Success);
                await RefreshExpenseList();
                ResetForm();
            }
            else
            {
                Snackbar.Add(message, Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error saving expense: {ex.Message}", Severity.Error);
        }
        finally
        {
            _processing = false;
        }
    }

    private async Task DeleteExpense()
    {
        var result = await DialogService.ShowMessageBox(
            "Delete Expense",
            "Are you sure you want to delete this expense?",
            yesText: "Delete", cancelText: "Cancel");

        if (result != true)
            return;

        _processing = true;
        try
        {
            var (success, message) = await ExpenseService.DeleteExpenseAsync(_expense.Id, _userId);

            if (success)
            {
                Snackbar.Add(message, Severity.Success);
                await RefreshExpenseList();
                ResetForm();
            }
            else
            {
                Snackbar.Add(message, Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error deleting expense: {ex.Message}", Severity.Error);
        }
        finally
        {
            _processing = false;
        }
    }

    private void SelectExpenseForEdit(Expense expense)
    {
        _expense = new Expense
        {
            Id = expense.Id,
            Item = expense.Item,
            Amount = expense.Amount,
            ExpenseDate = expense.ExpenseDate,
            Category = expense.Category,
            TxnReference = expense.TxnReference
        };
        _isEditMode = true;
    }

    private void CancelEdit()
    {
        ResetForm();
    }

    private void ResetForm()
    {
        _expense = new Expense
        {
            ExpenseDate = DateTime.Today,
            Amount = 0,
            Category = "Miscellaneous"
        };
        _isEditMode = false;
        _form?.ResetAsync();
    }
}
