    }

    :global(.mud-theme-dark) .form-card.edit-mode .form-header {
        background: linear-gradient(135deg, #4a3000 0%, #3d2800 100%);
        color: #FFB74D;
    }

    :global(.mud-theme-dark) .form-actions {
        border-color: #333;
    }

    :global(.mud-theme-dark) .list-card {
