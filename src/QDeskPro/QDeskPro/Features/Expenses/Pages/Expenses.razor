@page "/clerk/expenses"
@using Microsoft.AspNetCore.Authorization
@using QDeskPro.Features.Expenses.Services
@using QDeskPro.Features.Admin.Services
@using QDeskPro.Features.Timeline.Components
@using QDeskPro.Domain.Entities
@attribute [Authorize(Roles = "Clerk")]
@rendermode InteractiveServer
@inject ExpenseService ExpenseService
@inject UserService UserService
@inject AuthenticationStateProvider AuthStateProvider
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<PageTitle>Expenses - QDeskPro</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="expenses-container py-4">
    @* Modern Page Header *@
    <div class="expenses-header">
        <div class="header-content">
            <div class="header-icon-wrapper">
                <MudIcon Icon="@Icons.Material.Rounded.Receipt" Size="Size.Large" />
            </div>
            <div class="header-text">
                <h1>Expenses</h1>
                <p>Track your daily expenses</p>
            </div>
        </div>
        <div class="header-stats">
            <div class="stat-badge">
                <MudIcon Icon="@Icons.Material.Rounded.ListAlt" Size="Size.Small" />
                <span>@_expenses.Count records</span>
            </div>
            <QuickNoteButton QuarryId="@_quarryId"
                             EntityType="Expenses"
                             EntityReference="@($"Expenses - {DateTime.Today:dd MMM yyyy}")"
                             SuggestedTitle="Expense Note"
                             TooltipText="Add note about expenses" />
        </div>
    </div>

    @if (_loading)
    {
        <div class="loading-container">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
            <MudText Typo="Typo.body1" Class="mt-3" Color="Color.Secondary">Loading expenses...</MudText>
        </div>
    }
    else
    {
        @* Expense Entry Form *@
        <div class="form-card @(_isEditMode ? "edit-mode" : "")">
            <div class="form-header">
                <MudIcon Icon="@(_isEditMode ? Icons.Material.Rounded.Edit : Icons.Material.Rounded.AddCircle)" Size="Size.Small" />
                <span>@(_isEditMode ? "Update Expense" : "Add New Expense")</span>
            </div>

            <MudForm @ref="_form" @bind-IsValid="_isValid">
                <MudGrid>
                    <MudItem xs="12" sm="6">
                        <MudTextField @bind-Value="_expense.Item"
                                      Label="Description"
                                      Variant="Variant.Outlined"
                                      Required="true"
                                      RequiredError="Please provide the description details" />
                    </MudItem>

                    <MudItem xs="12" sm="6">
                        <MudNumericField @bind-Value="_expense.Amount"
                                         Label="Amount"
                                         Variant="Variant.Outlined"
                                         Min="0.01"
                                         Required="true"
                                         RequiredError="Please provide the amount details"
                                         Adornment="Adornment.Start"
                                         AdornmentText="KES" />
                    </MudItem>

                    <MudItem xs="12" sm="6">
                        <MudDatePicker @bind-Date="_expense.ExpenseDate"
                                       Label="Expense Date"
                                       Variant="Variant.Outlined"
                                       Required="true"
                                       RequiredError="Please select a date"
                                       MaxDate="@DateTime.Today"
                                       MinDate="@DateTime.Today.AddDays(-5)"
                                       DateFormat="dd/MM/yyyy" />
                    </MudItem>

                    <MudItem xs="12" sm="6">
                        <MudSelect @bind-Value="_expense.Category"
                                   Label="Category"
                                   Variant="Variant.Outlined"
                                   Required="true"
                                   RequiredError="Please select a category">
                            @foreach (var category in ExpenseCategories)
                            {
                                <MudSelectItem Value="@category">@category</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField @bind-Value="_expense.TxnReference"
                                      Label="Payment Reference (Optional)"
                                      Variant="Variant.Outlined"
                                      Lines="2" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField @bind-Value="_expense.Notes"
                                      Label="Notes (Optional)"
                                      Variant="Variant.Outlined"
                                      Lines="2"
                                      Placeholder="Add any additional notes..."
                                      MaxLength="500" />
                    </MudItem>
                </MudGrid>

                @* Action Buttons *@
                <div class="form-actions">
                    @if (_isEditMode)
                    {
                        <MudButton Variant="Variant.Outlined"
                                   Color="Color.Error"
                                   OnClick="DeleteExpense"
                                   Disabled="_processing"
                                   StartIcon="@Icons.Material.Rounded.Delete"
                                   Class="action-btn">
                            Delete
                        </MudButton>
                        <MudButton Variant="Variant.Outlined"
                                   OnClick="CancelEdit"
                                   Disabled="_processing"
                                   Class="action-btn">
                            Cancel
                        </MudButton>
                    }
                    <MudButton Variant="Variant.Filled"
                               Color="@(_isEditMode ? Color.Warning : Color.Primary)"
                               Disabled="@(!_isValid || _processing)"
                               OnClick="SaveExpense"
                               StartIcon="@Icons.Material.Rounded.Save"
                               Class="action-btn save-btn">
                        @if (_processing)
                        {
                            <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                        }
                        @(_isEditMode ? "Update Expense" : "Save Expense")
                    </MudButton>
                </div>
            </MudForm>
        </div>

        @* Expense List *@
        <div class="list-card">
            <div class="list-header">
                <MudIcon Icon="@Icons.Material.Rounded.History" Size="Size.Small" />
                <span>Recent Expenses (Last 5 Days)</span>
            </div>

            @if (!_expenses.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <MudIcon Icon="@Icons.Material.Rounded.Inbox" Size="Size.Large" />
                    </div>
                    <MudText Typo="Typo.h6" Class="mt-3">No expenses recorded yet</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mt-1">Add your first expense using the form above</MudText>
                </div>
            }
            else
            {
                <div class="table-wrapper">
                    <MudTable Items="@_expenses"
                              T="Expense"
                              Hover="true"
                              Breakpoint="Breakpoint.Sm"
                              Dense="true"
                              Loading="@_loadingList"
                              LoadingProgressColor="Color.Primary"
                              RowClass="expense-row"
                              OnRowClick="@(args => SelectExpenseForEdit(args.Item))">
                        <HeaderContent>
                            <MudTh>Date</MudTh>
                            <MudTh>Description</MudTh>
                            <MudTh>Category</MudTh>
                            <MudTh Style="text-align: right">Amount</MudTh>
                        </HeaderContent>
                        <RowTemplate>
                            <MudTd DataLabel="Date">
                                <MudStack Spacing="0">
                                    <MudText Typo="Typo.body2" Class="font-weight-medium">@context.ExpenseDate?.ToString("dd/MM/yy")</MudText>
                                    <MudText Typo="Typo.caption" Color="Color.Secondary">@context.ExpenseDate?.ToString("hh:mm tt")</MudText>
                                </MudStack>
                            </MudTd>
                            <MudTd DataLabel="Description">
                                <MudStack Spacing="0">
                                    <MudText Typo="Typo.body2">@context.Item</MudText>
                                    @if (!string.IsNullOrWhiteSpace(context.TxnReference))
                                    {
                                        <MudText Typo="Typo.caption" Color="Color.Secondary">Ref: @context.TxnReference</MudText>
                                    }
                                </MudStack>
                            </MudTd>
                            <MudTd DataLabel="Category">
                                <MudChip T="string" Size="Size.Small" Color="Color.Default" Class="category-chip">@context.Category</MudChip>
                            </MudTd>
                            <MudTd DataLabel="Amount" Style="text-align: right">
                                <MudText Typo="Typo.body1" Color="Color.Error" Class="font-weight-bold amount-text">
                                    KES @context.Amount.ToString("N1")
                                </MudText>
                            </MudTd>
                        </RowTemplate>
                        <PagerContent>
                            <MudTablePager PageSizeOptions="new int[] { 12, 25, 50 }" />
                        </PagerContent>
                    </MudTable>
                </div>
            }
        </div>
    }
</MudContainer>

<style>
