@page "/"
@using MudBlazor

<PageTitle>QDeskPro - Quarry Management System</PageTitle>

@* Hero Section *@
<div class="hero-section">
    <div class="hero-background">
        <div class="hero-pattern"></div>
    </div>
    <div class="hero-content">
        <MudStack AlignItems="AlignItems.Center" Spacing="4">
            <div class="hero-icon-container">
                <MudIcon Icon="@Icons.Material.Rounded.Terrain" Size="Size.Large" Class="hero-icon" />
            </div>
            <MudText Typo="Typo.h2" Class="hero-title text-center">
                Welcome to <span class="text-gradient">QDeskPro</span>
            </MudText>
            <MudText Typo="Typo.h6" Class="hero-subtitle text-center">
                Modern Quarry Management System
            </MudText>
            <MudText Typo="Typo.body1" Class="hero-description text-center">
                Streamline your quarry operations with our comprehensive sales management,
                expense tracking, and real-time analytics platform.
            </MudText>

            <AuthorizeView>
                <NotAuthorized>
                    <MudStack Row="true" Spacing="3" Class="mt-4">
                        <MudButton Variant="Variant.Filled"
                                   Color="Color.Primary"
                                   Size="Size.Large"
                                   StartIcon="@Icons.Material.Rounded.Login"
                                   Class="hero-btn-primary"
                                   OnClick="NavigateToLogin">
                            Sign In
                        </MudButton>
                        <MudButton Variant="Variant.Outlined"
                                   Color="Color.Primary"
                                   Size="Size.Large"
                                   StartIcon="@Icons.Material.Rounded.PersonAdd"
                                   Class="hero-btn-secondary"
                                   OnClick="NavigateToRegister">
                            Create Account
                        </MudButton>
                    </MudStack>
                </NotAuthorized>
                <Authorized>
                    <MudStack Row="true" Spacing="3" Class="mt-4">
                        @if (context.User.IsInRole("Clerk"))
                        {
                            <MudButton Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       Size="Size.Large"
                                       Href="clerk/dashboard"
                                       StartIcon="@Icons.Material.Rounded.Dashboard"
                                       Class="hero-btn-primary">
                                Go to Dashboard
                            </MudButton>
                            <MudButton Variant="Variant.Outlined"
                                       Color="Color.Primary"
                                       Size="Size.Large"
                                       Href="clerk/sales/new"
                                       StartIcon="@Icons.Material.Rounded.AddShoppingCart"
                                       Class="hero-btn-secondary">
                                New Sale
                            </MudButton>
                        }
                        else if (context.User.IsInRole("Manager"))
                        {
                            <MudButton Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       Size="Size.Large"
                                       Href="dashboard"
                                       StartIcon="@Icons.Material.Rounded.Analytics"
                                       Class="hero-btn-primary">
                                View Analytics
                            </MudButton>
                            <MudButton Variant="Variant.Outlined"
                                       Color="Color.Primary"
                                       Size="Size.Large"
                                       Href="reports"
                                       StartIcon="@Icons.Material.Rounded.Assessment"
                                       Class="hero-btn-secondary">
                                Reports
                            </MudButton>
                        }
                        else
                        {
                            <MudButton Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       Size="Size.Large"
                                       Href="admin/managers"
                                       StartIcon="@Icons.Material.Rounded.AdminPanelSettings"
                                       Class="hero-btn-primary">
                                Admin Panel
                            </MudButton>
                        }
                    </MudStack>
                </Authorized>
            </AuthorizeView>
        </MudStack>
    </div>
</div>

@* Features Section *@
<MudContainer MaxWidth="MaxWidth.Large" Class="py-12">
    <MudText Typo="Typo.h4" Class="text-center mb-2 font-weight-bold">
        Powerful Features
    </MudText>
    <MudText Typo="Typo.body1" Color="Color.Secondary" Class="text-center mb-8">
        Everything you need to manage your quarry operations efficiently
    </MudText>

    <MudGrid Spacing="4">
        @* Feature 1 - Sales Management *@
        <MudItem xs="12" sm="6" md="4">
            <div class="feature-card feature-card-1">
                <div class="feature-icon">
                    <MudIcon Icon="@Icons.Material.Rounded.PointOfSale" Size="Size.Large" />
                </div>
                <MudText Typo="Typo.h6" Class="feature-title">Sales Management</MudText>
                <MudText Typo="Typo.body2" Class="feature-description">
                    Record sales transactions with vehicle details, product types, quantities, and payment tracking.
                </MudText>
            </div>
        </MudItem>

        @* Feature 2 - Expense Tracking *@
        <MudItem xs="12" sm="6" md="4">
            <div class="feature-card feature-card-2">
                <div class="feature-icon">
                    <MudIcon Icon="@Icons.Material.Rounded.Receipt" Size="Size.Large" />
                </div>
                <MudText Typo="Typo.h6" Class="feature-title">Expense Tracking</MudText>
                <MudText Typo="Typo.body2" Class="feature-description">
                    Track all expenses including commissions, loaders fees, and operational costs automatically.
                </MudText>
            </div>
        </MudItem>

        @* Feature 3 - Real-time Reports *@
        <MudItem xs="12" sm="6" md="4">
            <div class="feature-card feature-card-3">
                <div class="feature-icon">
                    <MudIcon Icon="@Icons.Material.Rounded.Assessment" Size="Size.Large" />
                </div>
                <MudText Typo="Typo.h6" Class="feature-title">Real-time Reports</MudText>
                <MudText Typo="Typo.body2" Class="feature-description">
                    Generate daily sales reports with comprehensive summaries and export to Excel.
                </MudText>
            </div>
        </MudItem>

        @* Feature 4 - Banking Records *@
        <MudItem xs="12" sm="6" md="4">
            <div class="feature-card feature-card-4">
                <div class="feature-icon">
                    <MudIcon Icon="@Icons.Material.Rounded.AccountBalance" Size="Size.Large" />
                </div>
                <MudText Typo="Typo.h6" Class="feature-title">Banking Records</MudText>
                <MudText Typo="Typo.body2" Class="feature-description">
                    Track cash deposits and reconcile banking transactions with ease.
                </MudText>
            </div>
        </MudItem>

        @* Feature 5 - Fuel Monitoring *@
        <MudItem xs="12" sm="6" md="4">
            <div class="feature-card feature-card-5">
                <div class="feature-icon">
                    <MudIcon Icon="@Icons.Material.Rounded.LocalGasStation" Size="Size.Large" />
                </div>
                <MudText Typo="Typo.h6" Class="feature-title">Fuel Monitoring</MudText>
                <MudText Typo="Typo.body2" Class="feature-description">
                    Monitor fuel consumption for machines and wheel loaders with balance tracking.
                </MudText>
            </div>
        </MudItem>

        @* Feature 6 - Analytics Dashboard *@
        <MudItem xs="12" sm="6" md="4">
            <div class="feature-card feature-card-6">
                <div class="feature-icon">
                    <MudIcon Icon="@Icons.Material.Rounded.Dashboard" Size="Size.Large" />
                </div>
                <MudText Typo="Typo.h6" Class="feature-title">Analytics Dashboard</MudText>
                <MudText Typo="Typo.body2" Class="feature-description">
                    Visualize sales trends, profit margins, and key performance metrics at a glance.
                </MudText>
            </div>
        </MudItem>
    </MudGrid>
</MudContainer>

@* Stats Section *@
<div class="stats-section">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudGrid Spacing="4" Justify="Justify.Center">
            <MudItem xs="6" sm="3">
                <div class="stat-item">
                    <MudText Typo="Typo.h3" Class="stat-value">100%</MudText>
                    <MudText Typo="Typo.body2" Class="stat-label">Cloud Based</MudText>
                </div>
            </MudItem>
            <MudItem xs="6" sm="3">
                <div class="stat-item">
                    <MudText Typo="Typo.h3" Class="stat-value">24/7</MudText>
                    <MudText Typo="Typo.body2" Class="stat-label">Always Available</MudText>
                </div>
            </MudItem>
            <MudItem xs="6" sm="3">
                <div class="stat-item">
                    <MudText Typo="Typo.h3" Class="stat-value">Secure</MudText>
                    <MudText Typo="Typo.body2" Class="stat-label">Role-Based Access</MudText>
                </div>
            </MudItem>
            <MudItem xs="6" sm="3">
                <div class="stat-item">
                    <MudText Typo="Typo.h3" Class="stat-value">Fast</MudText>
                    <MudText Typo="Typo.body2" Class="stat-label">Real-time Updates</MudText>
                </div>
            </MudItem>
        </MudGrid>
    </MudContainer>
</div>

@* Footer *@
<div class="home-footer">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudStack AlignItems="AlignItems.Center" Spacing="2">
            <MudText Typo="Typo.body2" Color="Color.Secondary">
                QDeskPro - Quarry Management System
            </MudText>
            <MudText Typo="Typo.caption" Color="Color.Secondary">
                Built with Blazor & MudBlazor | .NET 10
            </MudText>
        </MudStack>
    </MudContainer>
</div>

<style>
    /* Hero Section */
    .hero-section {
        position: relative;
        min-height: 500px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 60px 24px;
        margin: -24px -24px 0 -24px;
        overflow: hidden;
    }

    .hero-background {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, #1565C0 0%, #0D47A1 50%, #1A237E 100%);
        z-index: 0;
    }

    .hero-pattern {
        position: absolute;
        inset: 0;
        background-image:
            radial-gradient(circle at 20% 30%, rgba(255,255,255,0.1) 0%, transparent 40%),
            radial-gradient(circle at 80% 70%, rgba(255,255,255,0.08) 0%, transparent 40%),
            radial-gradient(circle at 50% 50%, rgba(255,255,255,0.05) 0%, transparent 60%);
        opacity: 0.8;
    }

    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 700px;
    }

    .hero-icon-container {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        margin-bottom: 16px;
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    .hero-icon {
        color: white !important;
        font-size: 2.5rem !important;
    }

    .hero-title {
        color: white !important;
        font-weight: 800 !important;
        letter-spacing: -0.02em;
        line-height: 1.2 !important;
    }

    .text-gradient {
        background: linear-gradient(135deg, #64B5F6 0%, #90CAF9 50%, #BBDEFB 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-subtitle {
        color: rgba(255, 255, 255, 0.9) !important;
        font-weight: 500 !important;
    }

    .hero-description {
        color: rgba(255, 255, 255, 0.8) !important;
        max-width: 500px;
        line-height: 1.7 !important;
    }

    .hero-btn-primary {
        border-radius: 14px !important;
        padding: 12px 32px !important;
        font-weight: 600 !important;
        text-transform: none !important;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2) !important;
        background: white !important;
        color: #1565C0 !important;
        transition: all 0.2s ease !important;
    }

    .hero-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.25) !important;
    }

    .hero-btn-secondary {
        border-radius: 14px !important;
        padding: 12px 32px !important;
        font-weight: 600 !important;
        text-transform: none !important;
        border-color: rgba(255, 255, 255, 0.5) !important;
        color: white !important;
        transition: all 0.2s ease !important;
    }

    .hero-btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1) !important;
        border-color: white !important;
    }

    /* Hero Link - Remove anchor tag styling */
    .hero-link {
        text-decoration: none !important;
        color: inherit !important;
    }

    /* Feature Cards */
    .feature-card {
        background: white;
        border-radius: 20px;
        padding: 32px 24px;
        height: 100%;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid #e0e6ed;
        position: relative;
        overflow: hidden;
    }

    .feature-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--feature-gradient);
        transform: scaleX(0);
        transition: transform 0.3s ease;
        transform-origin: left;
    }

    .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    .feature-card:hover::before {
        transform: scaleX(1);
    }

    .feature-card-1 { --feature-gradient: linear-gradient(135deg, #1565C0, #0D47A1); }
    .feature-card-2 { --feature-gradient: linear-gradient(135deg, #F57C00, #E65100); }
    .feature-card-3 { --feature-gradient: linear-gradient(135deg, #0288D1, #01579B); }
    .feature-card-4 { --feature-gradient: linear-gradient(135deg, #00838F, #006064); }
    .feature-card-5 { --feature-gradient: linear-gradient(135deg, #C62828, #B71C1C); }
    .feature-card-6 { --feature-gradient: linear-gradient(135deg, #2E7D32, #1B5E20); }

    .feature-icon {
        width: 60px;
        height: 60px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        background: var(--feature-gradient);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .feature-icon .mud-icon-root {
        color: white !important;
    }

    .feature-title {
        font-weight: 700 !important;
        margin-bottom: 8px !important;
        color: #1a1a2e;
    }

    .feature-description {
        color: #546e7a !important;
        line-height: 1.6 !important;
    }

    /* Stats Section */
    .stats-section {
        background: linear-gradient(135deg, #1565C0 0%, #0D47A1 100%);
        padding: 60px 24px;
        margin: 60px -24px 0 -24px;
    }

    .stat-item {
        text-align: center;
        padding: 20px;
    }

    .stat-value {
        color: white !important;
        font-weight: 800 !important;
        letter-spacing: -0.02em;
    }

    .stat-label {
        color: rgba(255, 255, 255, 0.8) !important;
        margin-top: 4px;
        font-weight: 500;
    }

    /* Footer */
    .home-footer {
        padding: 40px 24px;
        text-align: center;
        border-top: 1px solid #e0e6ed;
    }

    /* Responsive */
    @@media (max-width: 960px) {
        .hero-section {
            min-height: 400px;
            padding: 40px 16px;
        }

        .hero-title {
            font-size: 1.75rem !important;
        }

        .hero-icon-container {
            width: 64px;
            height: 64px;
            border-radius: 18px;
        }

        .hero-icon {
            font-size: 2rem !important;
        }

        .stats-section {
            padding: 40px 16px;
        }

        .stat-value {
            font-size: 1.5rem !important;
        }
    }

    @@media (max-width: 600px) {
        .hero-section {
            margin: -24px -12px 0 -12px;
        }

        .stats-section {
            margin: 40px -12px 0 -12px;
        }

        .feature-card {
            padding: 24px 20px;
        }
    }
</style>

@code {
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;

    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/Account/Login", forceLoad: true);
    }

    private void NavigateToRegister()
    {
        NavigationManager.NavigateTo("/Account/Register", forceLoad: true);
    }
}
