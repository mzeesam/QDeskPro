<style>
    /* Navigation List Container */
    .qdp-nav-list {
        padding: 12px 16px;
    }

    /* Section Headers */
    .nav-section-header {
        padding: 16px 12px 8px 12px;
    }

    .nav-section-title {
        color: #90a4ae !important;
        font-weight: 700 !important;
        font-size: 0.65rem !important;
        letter-spacing: 0.12em !important;
        text-transform: uppercase;
    }

    /* Navigation Links */
    .qdp-nav-list .mud-nav-link {
        border-radius: 12px !important;
        margin-bottom: 4px;
        padding: 12px 16px !important;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .qdp-nav-list .mud-nav-link::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%) scaleY(0);
        width: 4px;
        height: 60%;
        background: linear-gradient(180deg, #1565C0 0%, #0D47A1 100%);
        border-radius: 0 4px 4px 0;
        transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .qdp-nav-list .mud-nav-link:hover {
        background: linear-gradient(90deg, rgba(21, 101, 192, 0.08) 0%, rgba(21, 101, 192, 0.04) 100%) !important;
        transform: translateX(4px);
    }

    .qdp-nav-list .mud-nav-link:hover::before {
        transform: translateY(-50%) scaleY(1);
    }

    /* Active State */
    .qdp-nav-list .mud-nav-link.active,
    .qdp-nav-list .mud-nav-link-active {
        background: linear-gradient(135deg, #1565C0 0%, #0D47A1 100%) !important;
        color: white !important;
        box-shadow: 0 4px 15px rgba(21, 101, 192, 0.35);
        transform: translateX(0);
    }

    .qdp-nav-list .mud-nav-link.active::before,
    .qdp-nav-list .mud-nav-link-active::before {
        display: none;
    }

    .qdp-nav-list .mud-nav-link.active .mud-nav-link-icon,
    .qdp-nav-list .mud-nav-link-active .mud-nav-link-icon,
    .qdp-nav-list .mud-nav-link.active .nav-label,
    .qdp-nav-list .mud-nav-link-active .nav-label {
        color: white !important;
    }

    .qdp-nav-list .mud-nav-link.active .nav-badge,
    .qdp-nav-list .mud-nav-link-active .nav-badge {
        background: rgba(255, 255, 255, 0.2) !important;
        color: white !important;
    }

    /* Navigation Label */
    .nav-label {
        font-weight: 500;
        font-size: 0.9rem;
        margin-left: 4px;
    }

    /* Navigation Badge */
    .nav-badge {
        margin-left: auto;
        font-size: 0.65rem !important;
        height: 20px !important;
        font-weight: 600;
    }

    /* Highlighted Primary Link (New Sale) */
    .nav-link-primary {
        background: linear-gradient(135deg, rgba(21, 101, 192, 0.1) 0%, rgba(13, 71, 161, 0.05) 100%) !important;
        border: 1px dashed rgba(21, 101, 192, 0.3) !important;
    }

    .nav-link-primary:hover {
        background: linear-gradient(135deg, rgba(21, 101, 192, 0.15) 0%, rgba(13, 71, 161, 0.1) 100%) !important;
        border-color: rgba(21, 101, 192, 0.5) !important;
    }

    .nav-link-primary.active,
    .nav-link-primary.mud-nav-link-active {
        border: none !important;
    }

    .nav-icon-highlight {
        width: 32px;
        height: 32px;
        background: linear-gradient(135deg, #1565C0 0%, #0D47A1 100%);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        box-shadow: 0 2px 8px rgba(21, 101, 192, 0.35);
    }

    .nav-link-primary.active .nav-icon-highlight,
    .nav-link-primary.mud-nav-link-active .nav-icon-highlight {
        background: rgba(255, 255, 255, 0.2);
        box-shadow: none;
    }

    /* Icon Styling */
    .qdp-nav-list .mud-nav-link-icon {
        margin-right: 12px;
        transition: transform 0.2s ease;
    }

    .qdp-nav-list .mud-nav-link:hover .mud-nav-link-icon {
        transform: scale(1.1);
    }

    /* Nav Group Styling */
    .qdp-nav-list .mud-nav-group {
        margin-bottom: 4px;
    }

    .qdp-nav-list .mud-nav-group .mud-nav-group-title {
        border-radius: 12px !important;
        padding: 12px 16px !important;
        font-weight: 500;
    }

    .qdp-nav-list .mud-nav-group .mud-nav-group-title:hover {
        background: rgba(21, 101, 192, 0.08) !important;
    }

    .qdp-nav-list .mud-nav-group .mud-nav-group-items {
        padding-left: 16px;
    }

    .qdp-nav-list .mud-nav-group .mud-nav-group-items .mud-nav-link {
        padding: 10px 16px !important;
        font-size: 0.875rem;
    }

    /* AI Link Styling */
    .nav-link-ai {
        background: linear-gradient(135deg, rgba(76, 175, 80, 0.1) 0%, rgba(56, 142, 60, 0.05) 100%) !important;
        border: 1px dashed rgba(76, 175, 80, 0.3) !important;
    }

    .nav-link-ai:hover {
        background: linear-gradient(135deg, rgba(76, 175, 80, 0.15) 0%, rgba(56, 142, 60, 0.1) 100%) !important;
        border-color: rgba(76, 175, 80, 0.5) !important;
    }

    .nav-link-ai.active,
    .nav-link-ai.mud-nav-link-active {
        background: linear-gradient(135deg, #43A047 0%, #2E7D32 100%) !important;
        border: none !important;
    }

    .nav-icon-ai {
        width: 32px;
        height: 32px;
        background: linear-gradient(135deg, #43A047 0%, #2E7D32 100%);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        box-shadow: 0 2px 8px rgba(76, 175, 80, 0.35);
    }

    .nav-link-ai.active .nav-icon-ai,
    .nav-link-ai.mud-nav-link-active .nav-icon-ai {
        background: rgba(255, 255, 255, 0.2);
        box-shadow: none;
    }

    /* Account Links - For SSR pages */
    .qdp-account-link {
        text-decoration: none !important;
        color: inherit !important;
        display: block;
    }

    .account-nav-item {
        display: flex;
        align-items: center;
        border-radius: 12px;
        padding: 12px 16px;
        margin-bottom: 4px;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
    }

    .account-nav-item:hover {
        background: linear-gradient(90deg, rgba(21, 101, 192, 0.08) 0%, rgba(21, 101, 192, 0.04) 100%);
        transform: translateX(4px);
    }

    .account-nav-icon {
        margin-right: 12px;
    }

    /* Responsive adjustments */
    @@media (max-width: 960px) {
        .nav-badge {
            display: none;
        }
    }
</style>

