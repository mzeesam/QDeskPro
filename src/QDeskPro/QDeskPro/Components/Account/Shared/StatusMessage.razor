@* SSR-compatible status message component - no MudBlazor *@

@if (!string.IsNullOrEmpty(DisplayMessage))
{
    var isError = DisplayMessage.StartsWith("Error", StringComparison.OrdinalIgnoreCase);
    <div class="@($"status-message {(isError ? "status-error" : "status-success")}")">
        @if (isError)
        {
            <svg xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 -960 960 960" width="20" fill="currentColor">
                <path d="M480-280q17 0 28.5-11.5T520-320q0-17-11.5-28.5T480-360q-17 0-28.5 11.5T440-320q0 17 11.5 28.5T480-280Zm-40-160h80v-240h-80v240Zm40 360q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Z"/>
            </svg>
        }
        else
        {
            <svg xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 -960 960 960" width="20" fill="currentColor">
                <path d="m424-296 282-282-56-56-226 226-114-114-56 56 170 170Zm56 216q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Z"/>
            </svg>
        }
        <span>@DisplayMessage</span>
    </div>
}

<style>
    .status-message {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 14px 18px;
        border-radius: 12px;
        font-weight: 500;
        font-size: 0.875rem;
        margin-bottom: 16px;
    }

    .status-message svg {
        flex-shrink: 0;
    }

    .status-success {
        background: linear-gradient(135deg, #2E7D32 0%, #1B5E20 100%);
        color: white;
        box-shadow: 0 4px 16px rgba(46, 125, 50, 0.25);
    }

    .status-error {
        background: linear-gradient(135deg, #C62828 0%, #B71C1C 100%);
        color: white;
        box-shadow: 0 4px 16px rgba(198, 40, 40, 0.25);
    }
</style>

@code {
    private string? messageFromCookie;

    [Parameter]
    public string? Message { get; set; }

    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? DisplayMessage => Message ?? messageFromCookie;

    protected override void OnInitialized()
    {
        // Only try to read cookie if HttpContext is available (SSR mode)
        // In interactive mode (JWT auth), HttpContext is null - just use Message parameter
        if (HttpContext is not null)
        {
            messageFromCookie = HttpContext.Request.Cookies[IdentityRedirectManager.StatusCookieName];

            if (messageFromCookie is not null)
            {
                HttpContext.Response.Cookies.Delete(IdentityRedirectManager.StatusCookieName);
            }
        }
    }
}
