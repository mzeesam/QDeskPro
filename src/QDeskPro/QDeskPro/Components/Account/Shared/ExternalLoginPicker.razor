@* SSR-compatible external login picker - no MudBlazor *@
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@using QDeskPro.Domain.Entities

@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityRedirectManager RedirectManager

@if (externalLogins.Length == 0)
{
    <div class="no-providers">
        <svg xmlns="http://www.w3.org/2000/svg" height="32" viewBox="0 -960 960 960" width="32" fill="#90A4AE">
            <path d="M792-56 686-160H260q-92 0-156-64T40-380q0-77 47.5-137T210-594q3-8 6-15.5t6-16.5L56-792l56-56 736 736-56 56ZM260-240h346L284-562q-2 11-3 21t-1 21h-20q-58 0-99 41t-41 99q0 58 41 99t99 41Zm185-240Zm419 172-58-58q17-14 25.5-32.5T840-440q0-42-29-71t-71-29h-60v-80q0-83-58.5-141.5T480-820q-51 0-94 23.5T318-734l-60-60q40-54 99-85t123-35v4q0-2 .5-2t-.5-2q117 0 198.5 81.5T760-634q69 8 114.5 59.5T920-454q0 45-21.5 84T864-308Zm-324-72Z"/>
        </svg>
        <p class="no-providers-text">No external authentication services are configured.</p>
        <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank" class="providers-link">
            Learn how to set up external login providers
        </a>
    </div>
}
else
{
    <form action="Account/PerformExternalLogin" method="post">
        <AntiforgeryToken />
        <input type="hidden" name="ReturnUrl" value="@ReturnUrl" />

        <div class="external-login-buttons">
            @foreach (var provider in externalLogins)
            {
                <button type="submit" name="provider" value="@provider.Name" class="@($"provider-button provider-{provider.Name.ToLower()}")">
                    @GetProviderSvg(provider.Name)
                    <span>Continue with @provider.DisplayName</span>
                </button>
            }
        </div>
    </form>
}

<style>
    .no-providers {
        background: #f5f7fa;
        border-radius: 12px;
        padding: 24px;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
    }

    .no-providers-text {
        margin: 0;
        color: #546E7A;
        font-size: 0.875rem;
    }

    .providers-link {
        color: #1565C0;
        font-size: 0.75rem;
        text-decoration: none;
    }

    .providers-link:hover {
        text-decoration: underline;
    }

    .external-login-buttons {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .provider-button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        width: 100%;
        padding: 14px 24px;
        font-size: 0.95rem;
        font-weight: 500;
        border: 2px solid;
        border-radius: 12px;
        background: white;
        cursor: pointer;
        transition: all 0.2s ease;
        font-family: inherit;
    }

    .provider-button svg {
        width: 20px;
        height: 20px;
        flex-shrink: 0;
    }

    /* Google */
    .provider-google {
        border-color: #dadce0;
        color: #3c4043;
    }

    .provider-google:hover {
        background: #f8f9fa;
        border-color: #4285f4;
        box-shadow: 0 2px 8px rgba(66, 133, 244, 0.15);
    }

    /* Microsoft */
    .provider-microsoft {
        border-color: #8c8c8c;
        color: #5e5e5e;
    }

    .provider-microsoft:hover {
        background: #f3f3f3;
        border-color: #00a4ef;
        box-shadow: 0 2px 8px rgba(0, 164, 239, 0.15);
    }

    /* Facebook */
    .provider-facebook {
        border-color: #1877f2;
        color: #1877f2;
    }

    .provider-facebook:hover {
        background: #e7f3ff;
        box-shadow: 0 2px 8px rgba(24, 119, 242, 0.2);
    }

    /* GitHub */
    .provider-github {
        border-color: #24292f;
        color: #24292f;
    }

    .provider-github:hover {
        background: #f6f8fa;
        box-shadow: 0 2px 8px rgba(36, 41, 47, 0.15);
    }

    /* Twitter / X */
    .provider-twitter {
        border-color: #1da1f2;
        color: #1da1f2;
    }

    .provider-twitter:hover {
        background: #e8f5fd;
        box-shadow: 0 2px 8px rgba(29, 161, 242, 0.2);
    }

    /* Apple */
    .provider-apple {
        border-color: #000000;
        color: #000000;
    }

    .provider-apple:hover {
        background: #f5f5f5;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    /* LinkedIn */
    .provider-linkedin {
        border-color: #0a66c2;
        color: #0a66c2;
    }

    .provider-linkedin:hover {
        background: #e8f4fc;
        box-shadow: 0 2px 8px rgba(10, 102, 194, 0.2);
    }

    /* Generic fallback */
    .provider-button:not(.provider-google):not(.provider-microsoft):not(.provider-facebook):not(.provider-github):not(.provider-twitter):not(.provider-apple):not(.provider-linkedin) {
        border-color: #1565C0;
        color: #1565C0;
    }

    .provider-button:not(.provider-google):not(.provider-microsoft):not(.provider-facebook):not(.provider-github):not(.provider-twitter):not(.provider-apple):not(.provider-linkedin):hover {
        background: #e3f2fd;
        box-shadow: 0 2px 8px rgba(21, 101, 192, 0.2);
    }
</style>

