@page "/Account/Manage/EnableAuthenticator"
@using MudBlazor
@using System.ComponentModel.DataAnnotations
@using System.Globalization
@using System.Text
@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Identity
@using QDeskPro.Domain.Entities

@inject UserManager<ApplicationUser> UserManager
@inject UrlEncoder UrlEncoder
@inject IdentityRedirectManager RedirectManager
@inject ILogger<EnableAuthenticator> Logger

<PageTitle>Configure Authenticator App - QDeskPro</PageTitle>

@if (recoveryCodes is not null)
{
    <ShowRecoveryCodes RecoveryCodes="recoveryCodes.ToArray()" StatusMessage="@message" />
}
else
{
    <div class="enable-auth-page">
        <MudPaper Class="auth-card" Elevation="0">
            <div class="auth-card-header">
                <div class="auth-icon">
                    <MudIcon Icon="@Icons.Material.Rounded.QrCode2" />
                </div>
                <MudText Typo="Typo.h5" Class="auth-title">Configure Authenticator</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    Set up two-factor authentication with your phone
                </MudText>
            </div>

            <StatusMessage Message="@message" />

            <MudStepper @bind-ActiveIndex="_activeStep" Vertical="true" Class="auth-stepper">
                <MudStep Title="Get an Authenticator App">
                    <MudPaper Class="step-content" Elevation="0">
                        <MudText Typo="Typo.body2" Class="mb-3">
                            Download a two-factor authenticator app on your mobile device:
                        </MudText>
                        <MudStack Spacing="2">
                            <MudPaper Class="app-option" Elevation="0">
                                <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                                    <MudIcon Icon="@Icons.Material.Rounded.Security" Color="Color.Primary" />
                                    <div>
                                        <MudText Typo="Typo.body2" Class="font-weight-semibold">Microsoft Authenticator</MudText>
                                        <MudStack Row="true" Spacing="1">
                                            <MudLink Href="https://go.microsoft.com/fwlink/?Linkid=825072" Target="_blank" Color="Color.Primary">Android</MudLink>
                                            <MudText Typo="Typo.caption" Color="Color.Secondary">|</MudText>
                                            <MudLink Href="https://go.microsoft.com/fwlink/?Linkid=825073" Target="_blank" Color="Color.Primary">iOS</MudLink>
                                        </MudStack>
                                    </div>
                                </MudStack>
                            </MudPaper>
                            <MudPaper Class="app-option" Elevation="0">
                                <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                                    <MudIcon Icon="@Icons.Material.Rounded.Verified" Color="Color.Success" />
                                    <div>
                                        <MudText Typo="Typo.body2" Class="font-weight-semibold">Google Authenticator</MudText>
                                        <MudStack Row="true" Spacing="1">
                                            <MudLink Href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&hl=en" Target="_blank" Color="Color.Primary">Android</MudLink>
                                            <MudText Typo="Typo.caption" Color="Color.Secondary">|</MudText>
                                            <MudLink Href="https://itunes.apple.com/us/app/google-authenticator/id388497605?mt=8" Target="_blank" Color="Color.Primary">iOS</MudLink>
                                        </MudStack>
                                    </div>
                                </MudStack>
                            </MudPaper>
                        </MudStack>
                    </MudPaper>
                </MudStep>

                <MudStep Title="Scan the QR Code">
                    <MudPaper Class="step-content" Elevation="0">
                        <MudText Typo="Typo.body2" Class="mb-3">
                            Scan the QR code below with your authenticator app, or manually enter the secret key.
                        </MudText>

                        <MudPaper Class="qr-placeholder" Elevation="0">
                            <MudIcon Icon="@Icons.Material.Rounded.QrCode2" Size="Size.Large" Color="Color.Primary" />
                            <MudText Typo="Typo.caption" Color="Color.Secondary" Class="mt-2">
                                QR Code would appear here
                            </MudText>
                            <div data-url="@authenticatorUri"></div>
                        </MudPaper>

                        <MudPaper Class="secret-key-section" Elevation="0">
                            <MudText Typo="Typo.caption" Color="Color.Secondary" Class="mb-1">
                                Or enter this key manually:
                            </MudText>
                            <MudText Typo="Typo.body1" Class="secret-key">@sharedKey</MudText>
                            <MudText Typo="Typo.caption" Color="Color.Secondary">
                                Spaces and casing do not matter
                            </MudText>
                        </MudPaper>
                    </MudPaper>
                </MudStep>

                <MudStep Title="Verify Setup">
                    <MudPaper Class="step-content" Elevation="0">
                        <MudText Typo="Typo.body2" Class="mb-3">
                            Enter the 6-digit code shown in your authenticator app to complete setup.
                        </MudText>

                        <EditForm Model="Input" FormName="send-code" OnValidSubmit="OnValidSubmitAsync" method="post" Enhance>
                            <DataAnnotationsValidator />

                            <MudStack Spacing="3">
                                <MudTextField @bind-Value="Input.Code"
                                              Label="Verification Code"
                                              Variant="Variant.Outlined"
                                              InputType="InputType.Text"
                                              Adornment="Adornment.Start"
                                              AdornmentIcon="@Icons.Material.Rounded.Pin"
                                              AdornmentColor="Color.Primary"
                                              autocomplete="off"
                                              Placeholder="Enter 6-digit code"
                                              MaxLength="7"
                                              Class="code-input" />

                                <MudButton ButtonType="ButtonType.Submit"
                                           Variant="Variant.Filled"
                                           Color="Color.Primary"
                                           Size="Size.Large"
                                           FullWidth="true"
                                           StartIcon="@Icons.Material.Rounded.CheckCircle"
                                           Class="verify-button">
                                    Verify & Enable 2FA
                                </MudButton>
                            </MudStack>
                        </EditForm>
                    </MudPaper>
                </MudStep>
            </MudStepper>

            <MudPaper Class="help-section" Elevation="0">
                <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Start">
                    <MudIcon Icon="@Icons.Material.Rounded.Help" Size="Size.Small" Color="Color.Info" />
                    <MudText Typo="Typo.caption" Color="Color.Secondary">
                        Having trouble? Make sure your phone's time is synchronized correctly, as authenticator
                        apps use time-based codes.
                    </MudText>
                </MudStack>
            </MudPaper>
        </MudPaper>
    </div>
}

