@page "/Account/InvalidPasswordReset"
@using MudBlazor

<PageTitle>Invalid Reset Link - QDeskPro</PageTitle>

<div class="invalid-page">
    <div class="invalid-background">
        <div class="invalid-pattern"></div>
    </div>

    <MudContainer MaxWidth="MaxWidth.Small" Class="invalid-container">
        <MudPaper Class="invalid-card" Elevation="0">
            <div class="invalid-icon-container">
                <MudIcon Icon="@Icons.Material.Rounded.LinkOff" Size="Size.Large" />
            </div>

            <MudText Typo="Typo.h3" Class="invalid-title">
                Invalid Reset Link
            </MudText>

            <MudText Typo="Typo.body1" Color="Color.Secondary" Class="invalid-description">
                The password reset link you used is invalid or has expired.
                Please request a new password reset link.
            </MudText>

            <MudPaper Class="invalid-info" Elevation="0">
                <MudStack Spacing="2">
                    <MudText Typo="Typo.body2" Color="Color.Secondary" Class="font-weight-semibold">
                        This can happen if:
                    </MudText>
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudIcon Icon="@Icons.Material.Rounded.Timer" Size="Size.Small" Color="Color.Warning" />
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            The link has expired (links are valid for 24 hours)
                        </MudText>
                    </MudStack>
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudIcon Icon="@Icons.Material.Rounded.CheckCircle" Size="Size.Small" Color="Color.Warning" />
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            The link has already been used
                        </MudText>
                    </MudStack>
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudIcon Icon="@Icons.Material.Rounded.ContentCut" Size="Size.Small" Color="Color.Warning" />
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            The link was truncated or modified
                        </MudText>
                    </MudStack>
                </MudStack>
            </MudPaper>

            <MudStack Spacing="3" Class="invalid-actions">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           Size="Size.Large"
                           FullWidth="true"
                           Href="Account/ForgotPassword"
                           StartIcon="@Icons.Material.Rounded.LockReset"
                           Class="invalid-button">
                    Request New Reset Link
                </MudButton>

                <MudButton Variant="Variant.Outlined"
                           Color="Color.Default"
                           Size="Size.Large"
                           FullWidth="true"
                           Href="Account/Login"
                           StartIcon="@Icons.Material.Rounded.Login"
                           Class="invalid-button-secondary">
                    Return to Login
                </MudButton>
            </MudStack>
        </MudPaper>
    </MudContainer>
</div>

<style>
    .invalid-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        padding: 24px;
    }

    .invalid-background {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, #f5f7fa 0%, #e8eef5 100%);
        z-index: -1;
    }

    .invalid-pattern {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image:
            radial-gradient(circle at 30% 70%, rgba(255, 152, 0, 0.08) 0%, transparent 50%),
            radial-gradient(circle at 70% 30%, rgba(255, 152, 0, 0.05) 0%, transparent 50%);
    }

    .invalid-container {
        display: flex;
        justify-content: center;
    }

    .invalid-card {
        background: white !important;
        border-radius: 24px;
        padding: 48px;
        text-align: center;
        max-width: 480px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    }

    .invalid-icon-container {
        width: 96px;
        height: 96px;
        border-radius: 50%;
        background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
        animation: brokenLink 1s ease-out;
    }

    .invalid-icon-container .mud-icon-root {
        font-size: 3rem !important;
        color: #E65100;
    }

    @@keyframes brokenLink {
        0% { transform: rotate(-10deg); }
        25% { transform: rotate(10deg); }
        50% { transform: rotate(-5deg); }
        75% { transform: rotate(5deg); }
        100% { transform: rotate(0deg); }
    }

    .invalid-title {
        font-weight: 700 !important;
        color: #1a1a2e;
        margin-bottom: 16px;
    }

    .invalid-description {
        line-height: 1.7;
        margin-bottom: 24px;
    }

    .invalid-info {
        background: #f5f7fa !important;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 24px;
        text-align: left;
    }

    .invalid-actions {
        margin-top: 8px;
    }

    .invalid-button {
        border-radius: 12px !important;
        padding: 12px 24px !important;
        font-weight: 600 !important;
        text-transform: none !important;
    }

    .invalid-button-secondary {
        border-radius: 12px !important;
        padding: 12px 24px !important;
        text-transform: none !important;
    }

    @@media (max-width: 600px) {
        .invalid-card {
            padding: 32px 24px;
        }

        .invalid-icon-container {
            width: 80px;
            height: 80px;
        }

        .invalid-icon-container .mud-icon-root {
            font-size: 2.5rem !important;
        }
    }
</style>
