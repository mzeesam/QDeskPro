@page "/Account/LoginWith2fa"
@using MudBlazor
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using QDeskPro.Domain.Entities

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IdentityRedirectManager RedirectManager
@inject ILogger<LoginWith2fa> Logger

<PageTitle>Two-Factor Authentication - QDeskPro</PageTitle>

<div class="twofa-page">
    <div class="twofa-background">
        <div class="twofa-pattern"></div>
    </div>

    <MudContainer MaxWidth="MaxWidth.Small" Class="twofa-container">
        <MudPaper Class="twofa-card" Elevation="0">
            <div class="twofa-header">
                <div class="twofa-icon">
                    <MudIcon Icon="@Icons.Material.Rounded.Security" Size="Size.Large" />
                </div>
                <MudText Typo="Typo.h4" Class="twofa-title">Two-Factor Authentication</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    Your account is protected with 2FA. Enter the code from your authenticator app.
                </MudText>
            </div>

            <div class="twofa-form-container">
                <StatusMessage Message="@message" />

                <EditForm Model="Input" FormName="login-with-2fa" OnValidSubmit="OnValidSubmitAsync" method="post" Enhance>
                    <input type="hidden" name="ReturnUrl" value="@ReturnUrl" />
                    <input type="hidden" name="RememberMe" value="@RememberMe" />
                    <DataAnnotationsValidator />

                    <MudStack Spacing="3">
                        <MudTextField @bind-Value="Input.TwoFactorCode"
                                      Label="Authenticator Code"
                                      Variant="Variant.Outlined"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Rounded.Pin"
                                      AdornmentColor="Color.Primary"
                                      autocomplete="off"
                                      MaxLength="7"
                                      Required="true"
                                      RequiredError="Authenticator code is required"
                                      HelperText="Enter the 6-digit code from your app"
                                      Class="twofa-input code-input" />

                        <MudCheckBox @bind-Value="Input.RememberMachine"
                                     Label="Remember this device"
                                     Color="Color.Primary"
                                     Dense="true"
                                     Class="remember-device" />

                        <MudButton ButtonType="ButtonType.Submit"
                                   Variant="Variant.Filled"
                                   Color="Color.Primary"
                                   Size="Size.Large"
                                   FullWidth="true"
                                   Class="twofa-button"
                                   StartIcon="@Icons.Material.Rounded.Verified">
                            Verify & Sign In
                        </MudButton>
                    </MudStack>
                </EditForm>

                <MudPaper Class="twofa-info" Elevation="0">
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudIcon Icon="@Icons.Material.Rounded.Help" Size="Size.Small" Color="Color.Secondary" />
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            Open your authenticator app (Google Authenticator, Microsoft Authenticator, etc.)
                            and enter the current code for QDeskPro.
                        </MudText>
                    </MudStack>
                </MudPaper>
            </div>

            <div class="twofa-footer">
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    Lost access to your authenticator?
                </MudText>
                <MudLink Href="@($"Account/LoginWithRecoveryCode?ReturnUrl={ReturnUrl}")"
                         Color="Color.Primary"
                         Typo="Typo.body2"
                         Class="font-weight-semibold">
                    Use a recovery code instead
                </MudLink>
            </div>
        </MudPaper>
    </MudContainer>
</div>

<style>
    .twofa-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        padding: 24px;
    }

    .twofa-background {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, #1565C0 0%, #0D47A1 50%, #1A237E 100%);
        z-index: -1;
    }

    .twofa-pattern {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image:
            radial-gradient(circle at 50% 50%, rgba(255,255,255,0.1) 0%, transparent 50%);
        animation: patternPulse 4s ease-in-out infinite;
    }

    @@keyframes patternPulse {
        0%, 100% { opacity: 0.5; transform: scale(1); }
        50% { opacity: 1; transform: scale(1.1); }
    }

    .twofa-container {
        display: flex;
        justify-content: center;
    }

    .twofa-card {
        background: rgba(255, 255, 255, 0.98) !important;
        border-radius: 24px;
        padding: 48px;
        max-width: 450px;
        width: 100%;
        box-shadow: 0 25px 80px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(20px);
    }

    .twofa-header {
        text-align: center;
        margin-bottom: 32px;
    }

    .twofa-icon {
        width: 72px;
        height: 72px;
        border-radius: 20px;
        background: linear-gradient(135deg, #1565C0 0%, #0D47A1 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        color: white;
        box-shadow: 0 8px 32px rgba(21, 101, 192, 0.3);
        animation: shieldPulse 2s ease-in-out infinite;
    }

    @@keyframes shieldPulse {
        0%, 100% { box-shadow: 0 8px 32px rgba(21, 101, 192, 0.3); }
        50% { box-shadow: 0 8px 48px rgba(21, 101, 192, 0.5); }
    }

    .twofa-title {
        font-weight: 700 !important;
        color: #1a1a2e;
        margin-bottom: 8px;
    }

    .twofa-form-container {
        margin-bottom: 24px;
    }

    .twofa-input .mud-input-outlined-border {
        border-radius: 12px !important;
    }

    .code-input input {
        font-family: 'Roboto Mono', monospace;
        font-size: 1.5rem !important;
        letter-spacing: 0.5em;
        text-align: center;
    }

    .remember-device .mud-checkbox-label {
        font-size: 0.875rem;
    }

    .twofa-button {
        border-radius: 12px !important;
        padding: 12px 24px !important;
        font-weight: 600 !important;
        text-transform: none !important;
        letter-spacing: 0.02em;
        box-shadow: 0 4px 16px rgba(21, 101, 192, 0.3) !important;
        margin-top: 8px;
    }

    .twofa-button:hover {
        box-shadow: 0 6px 24px rgba(21, 101, 192, 0.4) !important;
        transform: translateY(-1px);
    }

    .twofa-info {
        background: #f5f7fa !important;
        border-radius: 12px;
        padding: 16px;
        margin-top: 24px;
    }

    .twofa-footer {
        text-align: center;
        padding-top: 24px;
        border-top: 1px solid #e0e6ed;
    }

    @@media (max-width: 600px) {
        .twofa-page {
            padding: 12px;
        }

        .twofa-card {
            padding: 32px 24px;
        }

        .twofa-icon {
            width: 60px;
            height: 60px;
        }

        .code-input input {
            font-size: 1.25rem !important;
        }
    }
</style>

@code {
    private string? message;
    private ApplicationUser user = default!;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = default!;

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    [SupplyParameterFromQuery]
    private bool RememberMe { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Input ??= new();

        // Ensure the user has gone through the username & password screen first
        user = await SignInManager.GetTwoFactorAuthenticationUserAsync() ??
            throw new InvalidOperationException("Unable to load two-factor authentication user.");
    }

    private async Task OnValidSubmitAsync()
    {
        var authenticatorCode = Input.TwoFactorCode!.Replace(" ", string.Empty).Replace("-", string.Empty);
        var result = await SignInManager.TwoFactorAuthenticatorSignInAsync(authenticatorCode, RememberMe, Input.RememberMachine);
        var userId = await UserManager.GetUserIdAsync(user);

        if (result.Succeeded)
        {
            Logger.LogInformation("User with ID '{UserId}' logged in with 2fa.", userId);
            RedirectManager.RedirectTo(ReturnUrl);
        }
        else if (result.IsLockedOut)
        {
            Logger.LogWarning("User with ID '{UserId}' account locked out.", userId);
            RedirectManager.RedirectTo("Account/Lockout");
        }
        else
        {
            Logger.LogWarning("Invalid authenticator code entered for user with ID '{UserId}'.", userId);
            message = "Error: Invalid authenticator code.";
        }
    }

    private sealed class InputModel
    {
        [Required]
        [StringLength(7, ErrorMessage = "The {0} must be at least {2} and at max {1} characters long.", MinimumLength = 6)]
        [DataType(DataType.Text)]
        [Display(Name = "Authenticator code")]
        public string? TwoFactorCode { get; set; }

        [Display(Name = "Remember this machine")]
        public bool RememberMachine { get; set; }
    }
}
