@page "/Account/RegisterConfirmation"
@using MudBlazor
@using System.Text
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using QDeskPro.Domain.Entities

@inject UserManager<ApplicationUser> UserManager
@inject IEmailSender<ApplicationUser> EmailSender
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Verify Your Email - QDeskPro</PageTitle>

<div class="confirmation-page">
    <div class="confirmation-background">
        <div class="confirmation-pattern"></div>
    </div>

    <MudContainer MaxWidth="MaxWidth.Small" Class="confirmation-container">
        <MudPaper Class="confirmation-card" Elevation="0">
            <div class="confirmation-icon-container">
                <MudIcon Icon="@Icons.Material.Rounded.MarkEmailUnread" Size="Size.Large" />
            </div>

            <MudText Typo="Typo.h3" Class="confirmation-title">
                Verify Your Email
            </MudText>

            <MudText Typo="Typo.body1" Color="Color.Secondary" Class="confirmation-description">
                We've sent a verification link to your email address.
                Please check your inbox to complete your registration.
            </MudText>

            @if (emailConfirmationLink is not null)
            {
                <MudPaper Class="dev-notice" Elevation="0">
                    <MudStack Spacing="2">
                        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Rounded.Code" Size="Size.Small" Color="Color.Warning" />
                            <MudText Typo="Typo.body2" Class="font-weight-semibold">Development Mode</MudText>
                        </MudStack>
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            Email sender not configured. Use this link to confirm:
                        </MudText>
                        <MudButton Variant="Variant.Outlined"
                                   Color="Color.Primary"
                                   Size="Size.Small"
                                   Href="@emailConfirmationLink"
                                   StartIcon="@Icons.Material.Rounded.Link">
                            Confirm Email
                        </MudButton>
                    </MudStack>
                </MudPaper>
            }
            else
            {
                <MudPaper Class="confirmation-info" Elevation="0">
                    <MudStack Spacing="2">
                        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Rounded.Inbox" Size="Size.Small" Color="Color.Primary" />
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                Check your inbox for the verification email
                            </MudText>
                        </MudStack>
                        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Rounded.Report" Size="Size.Small" Color="Color.Primary" />
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                Also check your spam or junk folder
                            </MudText>
                        </MudStack>
                        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Rounded.Schedule" Size="Size.Small" Color="Color.Primary" />
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                Email may take a few minutes to arrive
                            </MudText>
                        </MudStack>
                    </MudStack>
                </MudPaper>
            }

            <MudStack Spacing="3" Class="confirmation-actions">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           Size="Size.Large"
                           FullWidth="true"
                           Href="Account/Login"
                           StartIcon="@Icons.Material.Rounded.Login"
                           Class="confirmation-button">
                    Go to Login
                </MudButton>

                <MudButton Variant="Variant.Outlined"
                           Color="Color.Default"
                           Size="Size.Large"
                           FullWidth="true"
                           Href="Account/ResendEmailConfirmation"
                           StartIcon="@Icons.Material.Rounded.Refresh"
                           Class="confirmation-button-secondary">
                    Resend Verification Email
                </MudButton>
            </MudStack>
        </MudPaper>
    </MudContainer>
</div>

<style>
    .confirmation-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        padding: 24px;
    }

    .confirmation-background {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, #f5f7fa 0%, #e8eef5 100%);
        z-index: -1;
    }

    .confirmation-pattern {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image:
            radial-gradient(circle at 30% 70%, rgba(21, 101, 192, 0.08) 0%, transparent 50%),
            radial-gradient(circle at 70% 30%, rgba(21, 101, 192, 0.05) 0%, transparent 50%);
    }

    .confirmation-container {
        display: flex;
        justify-content: center;
    }

    .confirmation-card {
        background: white !important;
        border-radius: 24px;
        padding: 48px;
        text-align: center;
        max-width: 500px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    }

    .confirmation-icon-container {
        width: 96px;
        height: 96px;
        border-radius: 50%;
        background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
        animation: emailPulse 2s ease-in-out infinite;
    }

    .confirmation-icon-container .mud-icon-root {
        font-size: 3rem !important;
        color: #1565C0;
    }

    @@keyframes emailPulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .confirmation-title {
        font-weight: 700 !important;
        color: #1a1a2e;
        margin-bottom: 16px;
    }

    .confirmation-description {
        line-height: 1.7;
        margin-bottom: 24px;
    }

    .confirmation-info {
        background: #f5f7fa !important;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 24px;
        text-align: left;
    }

    .dev-notice {
        background: linear-gradient(135deg, #FFF8E1 0%, #FFECB3 100%) !important;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 24px;
        text-align: left;
        border: 1px solid rgba(255, 152, 0, 0.3);
    }

    .confirmation-actions {
        margin-top: 8px;
    }

    .confirmation-button {
        border-radius: 12px !important;
        padding: 12px 24px !important;
        font-weight: 600 !important;
        text-transform: none !important;
    }

    .confirmation-button-secondary {
        border-radius: 12px !important;
        padding: 12px 24px !important;
        text-transform: none !important;
    }

    @@media (max-width: 600px) {
        .confirmation-card {
            padding: 32px 24px;
        }

        .confirmation-icon-container {
            width: 80px;
            height: 80px;
        }

        .confirmation-icon-container .mud-icon-root {
            font-size: 2.5rem !important;
        }
    }
</style>

@code {
    private string? emailConfirmationLink;
    private string? statusMessage;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromQuery]
    private string? Email { get; set; }

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Email is null)
        {
            RedirectManager.RedirectTo("");
            return;
        }

        var user = await UserManager.FindByEmailAsync(Email);
        if (user is null)
        {
            HttpContext.Response.StatusCode = StatusCodes.Status404NotFound;
            statusMessage = "Error finding user for unspecified email";
        }
        else if (EmailSender is IdentityNoOpEmailSender)
        {
            // Once you add a real email sender, you should remove this code that lets you confirm the account
            var userId = await UserManager.GetUserIdAsync(user);
            var code = await UserManager.GenerateEmailConfirmationTokenAsync(user);
            code = WebEncoders.Base64UrlEncode(Encoding.UTF8.GetBytes(code));
            emailConfirmationLink = NavigationManager.GetUriWithQueryParameters(
                NavigationManager.ToAbsoluteUri("Account/ConfirmEmail").AbsoluteUri,
                new Dictionary<string, object?> { ["userId"] = userId, ["code"] = code, ["returnUrl"] = ReturnUrl });
        }
    }
}
