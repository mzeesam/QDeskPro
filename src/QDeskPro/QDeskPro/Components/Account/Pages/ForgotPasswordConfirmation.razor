@page "/Account/ForgotPasswordConfirmation"
@using MudBlazor

<PageTitle>Check Your Email - QDeskPro</PageTitle>

<div class="confirmation-page">
    <div class="confirmation-background">
        <div class="confirmation-pattern"></div>
    </div>

    <MudContainer MaxWidth="MaxWidth.Small" Class="confirmation-container">
        <MudPaper Class="confirmation-card" Elevation="0">
            <div class="confirmation-icon-container success">
                <MudIcon Icon="@Icons.Material.Rounded.MarkEmailRead" Size="Size.Large" />
            </div>

            <MudText Typo="Typo.h3" Class="confirmation-title">
                Check Your Email
            </MudText>

            <MudText Typo="Typo.body1" Color="Color.Secondary" Class="confirmation-description">
                We've sent a password reset link to your email address.
                Please check your inbox and click the link to reset your password.
            </MudText>

            <MudPaper Class="confirmation-info" Elevation="0">
                <MudStack Spacing="2">
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudIcon Icon="@Icons.Material.Rounded.Inbox" Size="Size.Small" Color="Color.Primary" />
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Check your inbox for the reset email
                        </MudText>
                    </MudStack>
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudIcon Icon="@Icons.Material.Rounded.Report" Size="Size.Small" Color="Color.Primary" />
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Also check your spam or junk folder
                        </MudText>
                    </MudStack>
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudIcon Icon="@Icons.Material.Rounded.Timer" Size="Size.Small" Color="Color.Primary" />
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Link expires in 24 hours
                        </MudText>
                    </MudStack>
                </MudStack>
            </MudPaper>

            <MudStack Spacing="3" Class="confirmation-actions">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           Size="Size.Large"
                           FullWidth="true"
                           Href="Account/Login"
                           StartIcon="@Icons.Material.Rounded.Login"
                           Class="confirmation-button">
                    Return to Login
                </MudButton>

                <MudButton Variant="Variant.Outlined"
                           Color="Color.Default"
                           Size="Size.Large"
                           FullWidth="true"
                           Href="Account/ForgotPassword"
                           StartIcon="@Icons.Material.Rounded.Refresh"
                           Class="confirmation-button-secondary">
                    Resend Email
                </MudButton>
            </MudStack>
        </MudPaper>
    </MudContainer>
</div>

<style>
    .confirmation-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        padding: 24px;
    }

    .confirmation-background {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, #f5f7fa 0%, #e8eef5 100%);
        z-index: -1;
    }

    .confirmation-pattern {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image:
            radial-gradient(circle at 30% 70%, rgba(21, 101, 192, 0.08) 0%, transparent 50%),
            radial-gradient(circle at 70% 30%, rgba(21, 101, 192, 0.05) 0%, transparent 50%);
    }

    .confirmation-container {
        display: flex;
        justify-content: center;
    }

    .confirmation-card {
        background: white !important;
        border-radius: 24px;
        padding: 48px;
        text-align: center;
        max-width: 500px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    }

    .confirmation-icon-container {
        width: 96px;
        height: 96px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
    }

    .confirmation-icon-container.success {
        background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
        animation: emailBounce 2s ease-in-out infinite;
    }

    .confirmation-icon-container.success .mud-icon-root {
        font-size: 3rem !important;
        color: #1565C0;
    }

    @@keyframes emailBounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-8px); }
    }

    .confirmation-title {
        font-weight: 700 !important;
        color: #1a1a2e;
        margin-bottom: 16px;
    }

    .confirmation-description {
        line-height: 1.7;
        margin-bottom: 24px;
    }

    .confirmation-info {
        background: #f5f7fa !important;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 24px;
        text-align: left;
    }

    .confirmation-actions {
        margin-top: 8px;
    }

    .confirmation-button {
        border-radius: 12px !important;
        padding: 12px 24px !important;
        font-weight: 600 !important;
        text-transform: none !important;
    }

    .confirmation-button-secondary {
        border-radius: 12px !important;
        padding: 12px 24px !important;
        text-transform: none !important;
    }

    @@media (max-width: 600px) {
        .confirmation-card {
            padding: 32px 24px;
        }

        .confirmation-icon-container {
            width: 80px;
            height: 80px;
        }

        .confirmation-icon-container .mud-icon-root {
            font-size: 2.5rem !important;
        }
    }
</style>
